<resources>

  <!-- Base application theme. -->
  <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
  </style>

  <style name="RubyGemsTheme" parent="RubyGems.Base">

  </style>

  <style name="RubyGems.Base" parent="Theme.AppCompat.Light.DarkActionBar">
    <item name="windowNoTitle">true</item>
    <item name="windowActionBar">false</item>
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
  </style>

  <style name="GemCardViewStyle" parent="Theme.AppCompat.Light">
    <item name="cardCornerRadius">2dp</item>
    <item name="cardElevation">15dp</item>
    <item name="contentPaddingBottom">12dp</item>
    <item name="contentPaddingTop">12dp</item>
    <item name="contentPaddingLeft">8dp</item>
    <item name="contentPaddingRight">8dp</item>
    <item name="cardBackgroundColor">@color/white</item>
  </style>
</resources>
